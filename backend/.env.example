# .env.example

# Auth0
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_API_AUDIENCE=https://your-api/
AUTH0_CLIENT_ID=your-auth0-client-id

# OpenAI / HuggingFace / Embedding APIs
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Whisper
WHISPER_MODEL=base  # or tiny / small / medium

# Language Settings
DEFAULT_LANGUAGE=en

# Vector DB
CHROMA_DB_DIR=./chroma_db  # Path to Chroma storage

# Database
DATABASE_URL=sqlite:///./transcripts.db